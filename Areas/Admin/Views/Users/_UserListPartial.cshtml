@model IEnumerable<TourBookingWeb.Models.User>

<table class="table table-hover table-striped table-bordered mb-0">
    <thead class="thead-dark text-center text-white">
        <tr>
            <th>#</th>
            <th>Họ tên</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Địa chỉ</th>
            <th>Vai trò</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody id="userTableBody">
        @foreach (var u in Model)
        {
            <tr>
                <td class="text-center">@u.UserId</td>
                <td>@u.FullName</td>
                <td>@u.Email</td>
                <td>@u.Phone</td>
                <td>@u.Address</td>
                <td class="text-center">@u.Role</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@u.UserId" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                    <a asp-action="Delete" asp-route-id="@u.UserId" class="btn btn-sm btn-danger" onclick="return confirm('Xóa khách hàng này?');"><i class="fas fa-trash-alt"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
@if (ViewBag.TotalPages > 1)
{
    <nav id="pagination">
        <ul class="pagination justify-content-center">
            @for (int i = 1; i <= ViewBag.TotalPages; i++)
            {
                <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                    <a class="page-link page-btn" href="#" data-page="@i">@i</a>
                </li>
            }
        </ul>
    </nav>
}
