<style>
    /* Loại bỏ biểu tượng mặc định và nền xám */
    #featuredToursCarousel .custom-carousel-btn {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background: none;
        border: none;
        padding: 0;
        width: 40px;
        height: 40px;
        z-index: 10;
    }

    #featuredToursCarousel .custom-carousel-btn i {
        font-size: 32px;
        color: #444;
        opacity: 0.8;
        transition: opacity 0.3s ease;
    }

    #featuredToursCarousel .custom-carousel-btn i:hover {
        opacity: 1;
        color: #000;
    }

    #featuredToursCarousel .carousel-control-prev {
        left: -40px;
    }

    #featuredToursCarousel .carousel-control-next {
        right: -40px;
    }


</style>






