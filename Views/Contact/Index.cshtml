<!-- Contact Info Section -->
<section class="container py-5 contact-section">
    <div class="text-center mb-5">
        <h2 class="fw-bold display-5">Bạn có câu hỏi gì không?</h2>
    </div>
    <div class="row g-4 text-center">
        <div class="col-md-4">
            <div class="contact-box h-100">
                <i class="far fa-envelope fa-2x text-info mb-3"></i>
                <h5 class="fw-bold">Mail 24/7</h5>
                <p class="text-muted">hongphuc31122306@gmail.com</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="contact-box h-100">
                <i class="fas fa-map-marker-alt fa-2x text-info mb-3"></i>
                <h5 class="fw-bold">Địa chỉ</h5>
                <p class="text-muted">Nguyễn Hữu Thọ, Quận 7, TPHCM</p>
            </div>
        </div>
        <div class="col-md-4">
            <div class="contact-box h-100">
                <i class="fas fa-phone-alt fa-2x text-info mb-3"></i>
                <h5 class="fw-bold">Hotline</h5>
                <p class="text-muted">0559960019</p>
            </div>
        </div>
    </div>
</section>

<!-- Contact Form Section -->
<section class="container py-5">
    <div class="row g-5 align-items-center">
        <div class="col-md-6">
            <img src="/img/background/bg10.jpg" class="img-fluid rounded shadow-sm" alt="Contact Image">
        </div>
        <div class="col-md-6">
            <h3 class="fw-bold mb-3">Gửi yêu cầu tư vấn</h3>
            <p class="text-muted">Chúng tôi sẽ liên hệ bạn trong thời gian sớm nhất để hỗ trợ chuyến đi của bạn.</p>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label">Họ tên *</label>
                    <input type="text" name="name" class="form-control" placeholder="Nhập họ tên..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Email *</label>
                    <input type="email" name="email" class="form-control" placeholder="Nhập email..." required />
                </div>
                <div class="mb-3">
                    <label class="form-label">Số người đi</label>
                    <input type="number" name="guests" class="form-control" placeholder="Nhập số lượng..." />
                </div>
                <div class="mb-3">
                    <label class="form-label">Ghi chú</label>
                    <textarea name="message" class="form-control" rows="3" placeholder="Ghi chú thêm..."></textarea>
                </div>
                <button type="submit" class="btn btn-primary px-4">Gửi yêu cầu</button>
            </form>
        </div>
    </div>
</section>

<!-- Custom Style -->
<style>
    .contact-box {
        border: 1px dashed #dee2e6;
        border-radius: 10px;
        padding: 30px;
        background-color: #fff;
        transition: all 0.3s ease;
    }

        .contact-box:hover {
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.05);
            transform: translateY(-5px);
        }

    .hero-header {
        background-color: #f8f9fa;
    }
</style>
